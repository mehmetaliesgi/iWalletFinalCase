<%= turbo_frame_tag "show" do %>
  <div class="fixed inset-0 bg-black bg-opacity-50 z-40"></div>
  <div class="fixed left-1/2 top-1/2 transform -translate-x-1/2 -translate-y-1/2 z-50 w-4/5 md:w-2/5">
    <div class="bg-white rounded-lg shadow-md p-6">
      <img class="w-24 h-24 mx-auto mb-4 rounded-full" src="https://picsum.photos/200/300" alt="Album Image">
      <p class="mb-2"><strong>Başlık:</strong> <%= @album['title'] %></p>
      <p class="mb-2"><strong>Album bağlantısı:</strong><%= link_to @album_link, @album_link, class: "text-blue-500 underline" %></p>
      <div class="flex justify-end">
        <%= link_to "Cancel", "#", data: { turbo_frame: "show" }, class: "mt-4 px-4 py-2 bg-gray-800 text-white rounded-lg" %>
      </div>
    </div>
  </div>
<% end %>
