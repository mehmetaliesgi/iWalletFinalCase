<%= turbo_frame_tag "show" do %>
  <div class="container mx-auto p-4">
    <div class="flex flex-col md:flex-row justify-between items-start space-y-4 md:space-y-0 md:space-x-4">
      <div class="bg-white rounded-lg shadow-md p-6 w-full md:w-1/3">
        <div class="flex flex-col items-center text-center">
          <img class="w-24 h-24 rounded-full mb-4" src="<%= @user['photo_url'] %>" alt="Profile Picture">
          <h3 class="text-xl font-bold text-gray-900"><%= @user['name'] %></h3>
          <p class="text-gray-600">@<%= @user['username'] %></p>
        </div>
        <div class="mt-4">
          <h4 class="text-lg font-bold text-gray-900">Email: </h4>
          <p class="text-gray-600"><%= @user['email'] %></p>
        </div>
        <div class="mt-4">
          <h4 class="text-lg font-bold text-gray-900">Phone: </h4>
          <p class="text-gray-600">+90 <%= @user['phone'] %></p>
        </div>
        <div class="mt-4">
          <h4 class="text-lg font-bold text-gray-900">Address</h4>
          <p class="text-gray-600"><%= @user['address']['street'] %>, <%= @user['address']['suite'] %>, <%= @user['address']['city'] %>, <%= @user['address']['zipcode'] %></p>
        </div>
      </div>
      <div class="flex-1 w-full">
        <h2 class="text-2xl font-bold mb-4 text-center ">Album List</h2>
        <div class="space-y-4">
          <% @albums.each do |album| %>
            <div class="flex items-center bg-white rounded-lg shadow-md p-4">
              <img class="w-16 h-16 rounded-lg" src="https://picsum.photos/200/300" alt="Album Image">
              <div class="ml-4">
                <h3 class="text-gray-900 font-medium"><%= link_to album['title'], popup_path(album['id']), data: {turbo_frame: "show"} %></h3>
              </div>
            </div>
          <% end %>
        </div>
      </div>
    </div>
  </div>
<% end %>